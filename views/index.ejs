                <input type="tel" id="fname" name="phone" placeholder="Phone Number (xxx-xxx-xxxx)" class="text-form" title="Please Enter Your Phone Number xxx-xxx-xxxx format" required >
            </div>
            <div> 
            <textarea name="message" rows="5" cols="33" class="text-label" style="margin-left: 5%; "> message Box</textarea><br>
            </div>
            <div>
                 <input type="submit" id="submit" value="Submit" class="text-label" >
            </div>         
        </form>
