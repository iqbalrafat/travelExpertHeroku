        <form  class="form-contact" action="mailto:rafat.iqbal@edu.sait.ca" method="POST" enctype="text/plain"> 
            <h4>Contact Us</h4>
            <div> 
                <label for="fname" class="text-label">Full Name</label><br>
                <input type="text" id="fname" name="Full Name" placeholder="Full Name" class="text-form" title="Please Enter Your Name" required >
